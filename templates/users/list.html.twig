{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Administração de usuários</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{  route('users.new') }}" class="btn btn-default btn-sm" data-toggle="tooltip" title="Adicionar Usuário">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            </a>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th class="text-center" style="width:10px">#</th>
                                    <th>Nome</th>
                                    <th>E-mail</th>
                                    <th class="text-center" style="width:100px">Ações</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in users %}
                                <tr>
                                    <td class="text-center">{{ user.id }}</td>
                                    <td>{{ user.first_name ~ ' ' ~ user.last_name }}</td>
                                    <td>{{ user.email }}</td>
                                    <td class="text-center">
                                        {#
                                        <a href="{{  route('users.edit', {'id': user.id}) }}">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                        |
                                        <a href="{{  route('users.show', {'id': user.id}) }}">
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        </a>
                                        #}

                                        <div class="btn-group" role="group" aria-label="...">

                                            <a href="{{  route('users.edit', {'id': user.id}) }}" class="btn btn-primary btn-xs" data-toggle="tooltip" title="Editar">
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                            </a>
                                            <a href="{{ route('users.delete', {'id': user.id}) }}" class="btn btn-danger btn-xs confirmation"  data-toggle="tooltip" title="Apagar">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}