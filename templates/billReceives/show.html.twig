{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Ver categoria de custo
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ route('billReceives.edit', {'id': bill.id}) }}" class="btn btn-primary" data-toggle="tooltip" title="Editar">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="{{ route('billReceives.delete', {'id': bill.id}) }}" class="btn btn-danger confirmation"  data-toggle="tooltip" title="Apagar">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <tbody>
                                <tr>
                                    <th scope="row">#</th>
                                    <td>{{ bill.id }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Data Lanc.</th>
                                    <td>{{ bill.date_launch | date('d/m/Y') }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Nome</th>
                                    <td>{{ bill.name }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Value</th>
                                    <td>{{ bill.value | number_format(2, ',', '.') }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}