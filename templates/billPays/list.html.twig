{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Administração de Contas a Pagar</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{  route('billPays.new') }}" class="btn btn-default btn-sm" data-toggle="tooltip" title="Adicionar Categoria">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            </a>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th class="text-center" style="width:10px">#</th>
                                    <th>Data Lanc</th>
                                    <th>Nome</th>
                                    <th>Valor</th>
                                    <th>Categoria</th>
                                    <th class="text-center" style="width:100px">Ações</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for bill in bills %}
                                <tr>
                                    <td class="text-center">{{ bill.id }}</td>
                                    <td>{{ bill.date_launch | date('d/m/Y') }}</td>
                                    <td>{{ bill.name }}</td>
                                    <td>{{ bill.value | number_format(2, ',', '.') }}</td>
                                    <td>{{ bill.categoryCost.name }}</td>
                                    <td class="text-center">
                                        {#
                                        <a href="{{  route('billPays.edit', {'id': bill.id}) }}">
                                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                        </a>
                                        |
                                        <a href="{{  route('billPays.show', {'id': bill.id}) }}">
                                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                        </a>
                                        #}

                                        <div class="btn-group" role="group" aria-label="...">

                                            <a href="{{  route('billPays.edit', {'id': bill.id}) }}" class="btn btn-primary btn-xs" data-toggle="tooltip" title="Editar">
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                            </a>
                                            <a href="{{ route('billPays.delete', {'id': bill.id}) }}" class="btn btn-danger btn-xs confirmation"  data-toggle="tooltip" title="Apagar">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}